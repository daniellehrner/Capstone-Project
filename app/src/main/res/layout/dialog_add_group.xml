<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingStart="@dimen/app_margin"
    android:paddingEnd="@dimen/app_margin"
    tools:context="me.lehrner.newsgroupsndy.view.AddGroupActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:contentDescription="@string/cancel"
        android:textColor="@android:color/white"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/add_group_close"
        android:onClick="onAddGroupCancel"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:text="@string/new_group"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/add_group_close"/>
</RelativeLayout>